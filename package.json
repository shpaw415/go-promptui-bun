{
  "name": "go-promptui-bun",
  "version": "0.1.0",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build:linux": "CGO_ENABLED=1 go build -buildmode=c-shared -o dist/lib/linux/libprompt.so src/main.go",
    "build:windows": "CGO_ENABLED=1 go build -buildmode=c-shared -o dist/lib/windows/libprompt.dll src/main.go",
    "build:macos": "CGO_ENABLED=1 go build -buildmode=c-shared -o dist/lib/macos/libprompt.dylib src/main.go",
    "build": "bun run build:linux && bun run build:windows && bun run build:macos",
    "start": "bun change-check.ts && bun ./src/index.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/types.ts"
  }
}
